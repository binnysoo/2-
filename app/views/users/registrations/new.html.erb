<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :이메일 %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br><br>
  </div>

  <div class="field">
    <%= f.label :이름 %><br />
    <%= f.text_field :username, autofocus: true %><br><br>
  </div>

  <div class="field">
    <%= f.label :전화번호 %><br />
    <%= f.text_field :phone_num, autofocus: true %><br><br>
  </div>

  <div class="field">
    <%= f.label :비밀번호 %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :비밀번호_재확인 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br><br>
  </div>

  <div class="actions">
    <%= f.submit "회원가입" %>
  </div>
<% end %>
<br><br>
<%= render "users/shared/links" %>
