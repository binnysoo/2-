<% if user_signed_in? %>
	<%= link_to "새 글 작성", "/main/new" %>
	<%= link_to "정보 수정", edit_user_registration_path %>
	<%= link_to "로그아웃", destroy_user_session_path, method: :delete %>

	<h2>제목</h2><br>

	<%@post.each do |x|%>
		● <a href='/main/show/<%=x.id%>'><%=x.title%></a>
		<% if x.email == current_user.email %>
		|　<a href='/main/destroy/<%=x.id%>'>[삭제]</a>
		<a href="/main/edit/<%=x.id%>">[수정]</a>
		<% end %><br>
	<%end%>
<% else %>
	<%= link_to "로그인", new_user_session_path %>
	<%= link_to "회원가입", new_user_registration_path %>

	<h2>제목</h2><br>

	<%@post.each do |x|%>
		● <%=x.title%><br>
	<%end%>
<% end %>


